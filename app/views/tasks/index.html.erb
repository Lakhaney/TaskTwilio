<h1>Donely</h1>
<h3>Tell me its done, please.</h3>
<hr />

<div>
  <% @task.each do |t| %>
    <p>Recipient: <%= t.recipient.name %></p>
    <p>Task: <%= t.activity %></p>
    <p>Task Message: <%= t.message %></p>
    <p>Text Delivery Date:
      <% if t.schedule_time %>
        <%=  t.schedule_time %><br />
        <%=  t.schedule_time.strftime('%e %B %Y %m:%M %p') %>
      <% end %>
    </p>
    <p>Status: <%= t.completed %></p>
    <hr />
  <% end %>
</div>